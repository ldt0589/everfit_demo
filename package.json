{
  "name": "playwright-testing-framework",
  "version": "1.0.0",
  "description": "Playwright Testing Framework with TypeScript",
  "scripts": {
    "demo": "playwright test tests/99.sinh.spec.ts",
    "regression": "rm -rf allure-results allure-report && playwright test --grep '@(smoke|regression)'",
    "fileUpload": "rm -rf allure-results allure-report && playwright test --grep '@(fileUpload)'",
    "test": "rm -rf allure-results allure-report && playwright test",
    "test:html": "playwright test --reporter=html",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "report:clean": "rm -rf allure-results allure-report",
    "report": "allure generate ./allure-results --clean -o ./allure-report && npx ts-node common/SlackUtils.ts && allure open ./allure-report",
    "report:local": "allure generate ./allure-results --clean -o ./allure-report && allure open ./allure-report",
    "report:defaul": "npx playwright show-report",
    "slack:notify": "npx tsx common/SlackUtils.ts",
    "deployment:history": "npx tsx scripts/generate-deployment-history.ts",
    "deployment:history:open": "npx tsx scripts/generate-deployment-history.ts && open deployment-history.html",
    "deployment:demo": "npx tsx scripts/generate-demo-deployment-history.ts",
    "slack:test": "npx tsx scripts/test-slack-notification.ts",
    "slack:preview": "npx tsx scripts/preview-slack-message.ts",
    "test:cf-env": "npx tsx scripts/test-cloudflare-env.ts",
    "debug:deployments": "npx tsx scripts/debug-deployment-fetch.ts"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@types/axios": "^0.9.36",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.16",
    "@types/mongodb": "^4.0.6",
    "@types/node": "^20.17.30",
    "@types/node-fetch": "^2.6.12",
    "@types/pg": "^8.11.14",
    "@types/proper-lockfile": "^4.1.4",
    "@types/ssh2": "^1.15.5",
    "@types/tunnel-ssh": "^5.0.4",
    "allure-playwright": "^2.15.1",
    "dotenv": "^16.4.7",
    "js-yaml": "^4.1.0",
    "typescript": "^5.7.3"
  },
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.9.0",
    "easy-yopmail": "^5.2.1",
    "googleapis": "^149.0.0",
    "lodash": "^4.17.21",
    "mongodb": "^6.16.0",
    "node-fetch": "^2.7.0",
    "node-html-to-image": "^5.0.0",
    "node-ssh-tunnel": "^1.0.16",
    "pg": "^8.15.6",
    "proper-lockfile": "^4.1.2",
    "ssh2": "^1.16.0",
    "strip-ansi": "^6.0.1",
    "tunnel-ssh": "^4.1.6"
  }
}
